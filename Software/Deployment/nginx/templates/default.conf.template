server {
  listen       80;
  listen  [::]:80;
  server_name  localhost;

  location / {
    proxy_pass         http://${UCM_FRONTEND_HOST}:${UCM_FRONTEND_PORT}/;
    proxy_set_header   Host $host;
  }

  location /grafana/ {
    proxy_pass         http://${GRAFANA_HOST}:${GRAFANA_PORT}/;
    proxy_set_header   Host $host;
  }

  error_page   500 502 503 504  /50x.html;
  location = /50x.html {
      root   /usr/share/nginx/html;
  }
}
